<Page
    x:Class="Steam_Deals.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:fa="using:FontAwesome.UWP"
    
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Grid Background="{StaticResource ColorGridPrincipal}">

        <NavigationView x:Name="nvPrincipal" ItemInvoked="Nv_ItemInvoked"
                        AlwaysShowHeader="False" IsSettingsVisible="False" PaneDisplayMode="Top" IsBackButtonVisible="Collapsed">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Name="itemPrincipal" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Visibility="Collapsed">
                    <NavigationViewItem.Content>
                        <TextBlock Text="Principal" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem x:Name="itemTiendas" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                    <NavigationViewItem.Icon>
                        <fa:FontAwesome Icon="CaretDown" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.Content>
                        <TextBlock Text="Tiendas" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout x:Name="botonTiendasMenu"/>
                    </FlyoutBase.AttachedFlyout>
                </NavigationViewItem>
                <Button x:Name="botonTiendaSeleccionada" Margin="-10,0,0,0" Background="Transparent" BorderBrush="Transparent" Visibility="Collapsed" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                    <StackPanel Orientation="Horizontal" Padding="0">
                        <controls:ImageEx x:Name="imagenTiendaSeleccionada" Height="16" Width="16" IsCacheEnabled="True" MinWidth="0"/>
                        <TextBlock x:Name="tbTiendaSeleccionada" Margin="16,0,0,0" Foreground="{StaticResource BrushPrimario}"/>
                    </StackPanel>
                </Button>
                <NavigationViewItemSeparator/>
                <NavigationViewItem x:Name="itemOfertas" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Visibility="Collapsed">
                    <NavigationViewItem.Content>
                        <TextBlock Text="Ofertas" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem x:Name="itemBundles" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Visibility="Collapsed">
                    <NavigationViewItem.Content>
                        <TextBlock Text="Bundles" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem x:Name="itemGratis" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Visibility="Collapsed">
                    <NavigationViewItem.Content>
                        <TextBlock Text="Gratis" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem x:Name="itemSuscripciones" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Visibility="Collapsed">
                    <NavigationViewItem.Content>
                        <TextBlock Text="Suscripciones" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItem x:Name="itemAnuncios" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Visibility="Collapsed">
                    <NavigationViewItem.Content>
                        <TextBlock Text="Anuncios" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                </NavigationViewItem>
                <NavigationViewItemSeparator/>
                <NavigationViewItem x:Name="itemConfig" Tapped="Nv_ItemFlyout" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                    <NavigationViewItem.Icon>
                        <fa:FontAwesome Icon="CaretDown" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.Content>
                        <TextBlock Text="Configuración" Foreground="{StaticResource BrushPrimario}"/>
                    </NavigationViewItem.Content>
                    <FlyoutBase.AttachedFlyout>
                        <MenuFlyout>
                            <MenuFlyoutItem x:Name="menuItemConfigDatos" Text="Datos" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutItem x:Name="menuItemConfigCarpetaBBDD" Text="Carpeta BBDD" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="menuItemConfigRss" Text="RSS" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="menuItemConfigGrupoSteam" Text="Grupo Steam" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutItem x:Name="menuItemConfigAmazonCom" Text="Amazon.com" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutItem x:Name="menuItemConfigTwitter" Text="Twitter" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutItem x:Name="menuItemConfigPushWeb" Text="Push Web" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutItem x:Name="menuItemConfigFichasWeb" Text="Fichas Web" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem x:Name="menuItemConfigAssets" Text="Assets" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            <MenuFlyoutItem x:Name="menuItemConfigSteamGifts" Text="SteamGifts" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                        </MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Grid>
                <Grid.Transitions>
                    <TransitionCollection>
                        <EdgeUIThemeTransition Edge="Bottom"/>
                    </TransitionCollection>
                </Grid.Transitions>

                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                        <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid x:Name="gridOfertas" Visibility="Collapsed">
                    <Grid x:Name="gridOfertasSeleccionar">
                        <StackPanel x:Name="spPresentacionEditor" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock x:Uid="SelectStore2" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            <GridView x:Name="gvOfertasTiendas" ItemContainerStyle="{StaticResource GridViewEstilo1}" IsItemClickEnabled="True" Margin="50,0,50,0"/>

                            <StackPanel Orientation="Horizontal" Margin="0,30,0,40" HorizontalAlignment="Center">
                                <CheckBox x:Name="cbUltimosResultados" Content="Mostrar Últimos Resultados" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                <CheckBox x:Name="cbUltimaVisita" Content="Cargar Última Visita" Margin="20,0" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                                <CheckBox x:Name="cbMostrarImagenes" Content="Mostrar Imágenes" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton"/>
                            </StackPanel>

                            <Button x:Name="botonEditorBuscarTodasOfertas" Background="{StaticResource BrushPrimario}" Padding="15,10" HorizontalAlignment="Center" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="Search" Foreground="White" Margin="0,0,10,0"/>
                                        <TextBlock Foreground="White" Text="Buscar Todas Ofertas"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="gridOfertasTiendas">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="gridOfertasTiendas2" Grid.Row="0" Visibility="Collapsed"/>
                        <StackPanel x:Name="spOfertasTiendasEditor" Grid.Row="1" Orientation="Horizontal" Padding="10" Visibility="Collapsed">
                            <Button x:Name="botonActualizarOfertas" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="Refresh" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="Refresh" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:Name="botonOrdenarOfertas" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}" Margin="5,0,0,0">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="Sort" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="OrderDeals" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                                <Button.Flyout>
                                    <MenuFlyout x:Name="botonOrdenarMenu"/>
                                </Button.Flyout>
                            </Button>
                            <Grid Margin="8,3" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1,0,0,0"/>
                            <Button x:Name="botonSeleccionarTodo" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="CheckSquare" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="SelectAll" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Button x:Name="botonLimpiarSeleccion" Background="Transparent" BorderBrush="Transparent" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton" Style="{StaticResource ButtonRevealStyle}" Margin="5,0,0,0">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <fa:FontAwesome Icon="Square" Foreground="{StaticResource BrushPrimario}"/>
                                        <TextBlock x:Uid="SelectClear" Foreground="{StaticResource BrushPrimario}" Margin="10,0,0,0"/>
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <Grid Margin="8,3" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1,0,0,0"/>
                            <ComboBox x:Name="cbFiltradoEditorAnalisis" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <ComboBox x:Name="cbFiltradoEditorDesarrolladores" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="tbNumOfertasCargadas2" VerticalAlignment="Center" Margin="20,0,0,0"/>
                            <TextBlock x:Name="tbNumOfertasSeleccionadas2" VerticalAlignment="Center" Margin="20,0,0,0"/>

                            <TextBlock x:Name="tbImportantesSeleccionados" VerticalAlignment="Center" Margin="30,0,0,0"/>
                            <ComboBox x:Name="cbImportantesSeleccionados" VerticalAlignment="Center" Margin="20,0,0,0" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>

                    <Grid x:Name="gridProgreso" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
                        <StackPanel x:Name="spOfertasProgreso" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <ProgressRing x:Name="prOrdenarProgreso" Width="50" Height="50" IsActive="True" Visibility="Collapsed" Foreground="{StaticResource ColorPrimario}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Grid>

                    <Grid x:Name="gridNoOfertas" Padding="10" Background="IndianRed" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="NoDeals" TextWrapping="Wrap" Foreground="White"/>
                            <TextBlock x:Name="tbNumOfertasCargadas" Margin="5,0,0,0" Foreground="White" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid x:Name="gridEditor" Visibility="Collapsed">
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="#FFE4E4E4" Offset="0.5" />
                            <GradientStop Color="#FFBFBFBF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Grid.Background>

                    <Grid x:Name="gridEditorpepeizqdeals" Padding="20" Margin="20" BorderBrush="{StaticResource BrushPrimario}" BorderThickness="1">
                        <ScrollViewer x:Name="svOfertas" Padding="0,0,15,0" VerticalScrollBarVisibility="Visible" Visibility="Collapsed">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Título"/>
                                <TextBox x:Name="tbTituloOfertas" Margin="0,10,0,15" TextWrapping="Wrap" AcceptsReturn="True"/>

                                <TextBlock Text="Twitter"/>
                                <TextBox x:Name="tbTwitterOfertas" Margin="0,10,0,15" TextWrapping="Wrap" AcceptsReturn="True"/>

                                <StackPanel x:Name="spUnJuegoOfertas">
                                    <TextBlock x:Uid="Url"/>

                                    <Grid Margin="0,10,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button x:Name="botonAbrirEnlaceJuegoOfertas" Grid.Column="0" Background="{StaticResource BrushPrimario}" Margin="0,0,15,0" Padding="10,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                            <Button.Content>
                                                <StackPanel>
                                                    <fa:FontAwesome Icon="Firefox" Foreground="White"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBox x:Name="tbEnlaceJuegoOfertas" Grid.Column="1" TextWrapping="Wrap" TextAlignment="Justify" AcceptsReturn="True"/>
                                    </Grid>

                                    <TextBlock Text="Imagen Juego"/>
                                    <Grid Margin="0,10,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Button x:Name="botonCambiarImagenOfertas" Grid.Column="0" Background="{StaticResource BrushPrimario}" Margin="0,0,15,0" Padding="10,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                            <Button.Content>
                                                <StackPanel>
                                                    <fa:FontAwesome Icon="Folder" Foreground="White"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBox x:Name="tbEnlaceImagenOfertas" Grid.Column="1" TextWrapping="Wrap" TextAlignment="Justify" AcceptsReturn="True"/>
                                    </Grid>

                                    <TextBlock Text="Imagen Fondo"/>
                                    <TextBox x:Name="tbEnlaceFondoOfertas" Margin="0,10,0,15" TextWrapping="Wrap" TextAlignment="Justify" AcceptsReturn="True"/>

                                    <CheckBox x:Name="cbErrorPrecioOfertas" Content="Error Precio" Margin="0,10,0,15"/>

                                    <TextBlock Text="Mensaje"/>

                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <controls:ImageEx Source="Assets/Banderas/pais_uk.png" Grid.Column="0" IsCacheEnabled="True" VerticalAlignment="Center" Margin="0,0,10,0" Width="24" Height="18"/>
                                        <TextBox x:Name="tbMensajeInglesOfertas" Grid.Column="1" TextWrapping="Wrap"/>
                                    </Grid>

                                    <Grid Margin="0,10,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <controls:ImageEx Source="Assets/Banderas/pais_es.png" Grid.Column="0" IsCacheEnabled="True" VerticalAlignment="Center" Margin="0,0,10,0" Width="24" Height="18"/>
                                        <TextBox x:Name="tbMensajeEspañolOfertas" Grid.Column="1" TextWrapping="Wrap"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel x:Name="spDosJuegosOfertas">
                                    <TextBlock Text="Cabecera" Margin="0,0,0,10"/>

                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ComboBox x:Name="cbDesarrolladoresOfertas" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,20,0"/>
                                        <ComboBox x:Name="cbLogosJuegosOfertas" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0"/>

                                        <TextBlock Text="Ancho:" Grid.Column="2" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                        <TextBox x:Name="tbCabeceraImagenAnchoOfertas" Grid.Column="3" TextWrapping="Wrap" Margin="0,0,20,0"/>

                                        <Button x:Name="botonCambiarCabeceraImagenOfertas" Grid.Column="4" Background="{StaticResource BrushPrimario}" Margin="0,0,15,0" Padding="10,5" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                            <Button.Content>
                                                <StackPanel>
                                                    <fa:FontAwesome Icon="Folder" Foreground="White"/>
                                                </StackPanel>
                                            </Button.Content>
                                        </Button>
                                        <TextBox x:Name="tbEnlaceCabeceraImagenOfertas" Grid.Column="5" TextWrapping="Wrap" TextAlignment="Justify" AcceptsReturn="True"/>
                                    </Grid>

                                    <TextBlock x:Uid="Title3"/>
                                    <TextBox x:Name="tbTituloComplementoOfertas" Margin="0,10,0,15" TextWrapping="Wrap" AcceptsReturn="True"/>
                                    <TextBlock x:Uid="Comment"/>
                                    <TextBox x:Name="tbComentarioOfertas" Margin="0,10,0,15" TextWrapping="Wrap" AcceptsReturn="True"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,15">
                                    <DatePicker x:Name="fechaOfertas" Margin="0,0,20,0"/>
                                    <TimePicker x:Name="horaOfertas" Margin="0,0,30,0"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,30">
                                    <Button x:Name="botonSubirOfertas" Margin="0,0,50,0" Background="{StaticResource BrushPrimario}" Padding="15,10" VerticalAlignment="Top" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <fa:FontAwesome Icon="Upload" Foreground="White"/>
                                                <TextBlock x:Uid="Upload" Margin="10,0,0,0" Foreground="White"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>

                                    <Button x:Name="botonCopiarHtmlOfertas" Margin="0,0,50,0" Background="{StaticResource BrushPrimario}" Padding="15,10" VerticalAlignment="Top" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <fa:FontAwesome Icon="Copy" Foreground="White"/>
                                                <TextBlock Text="HTML" Margin="10,0,0,0" Foreground="White"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>

                                    <Button x:Name="botonCopiarForoOfertas" Margin="0,0,50,0" Background="{StaticResource BrushPrimario}" Padding="15,10" VerticalAlignment="Top" Style="{StaticResource ButtonRevealStyle}" PointerEntered="UsuarioEntraBoton" PointerExited="UsuarioSaleBoton">
                                        <Button.Content>
                                            <StackPanel Orientation="Horizontal">
                                                <fa:FontAwesome Icon="Copy" Foreground="White"/>
                                                <TextBlock Text="phpBB" Margin="10,0,0,0" Foreground="White"/>
                                            </StackPanel>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>

                                <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
                                    <Button x:Name="botonImagenOfertas" Background="Transparent" Padding="0" BorderBrush="Transparent" BorderThickness="0">
                                        <Button.Resources>
                                            <ResourceDictionary>
                                                <ResourceDictionary.ThemeDictionaries>
                                                    <ResourceDictionary x:Key="Light">
                                                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                                    </ResourceDictionary>
                                                </ResourceDictionary.ThemeDictionaries>
                                            </ResourceDictionary>
                                        </Button.Resources>

                                        <Button.Content>
                                            <StackPanel>
                                                <Grid x:Name="gridUnJuegoOfertas" Width="1300" Height="400">
                                                    <Grid.Background>
                                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                            <GradientStop Color="#2e4460" Offset="0.6"/>
                                                            <GradientStop Color="#2e4460" Offset="0.8"/>
                                                            <GradientStop Color="#2e4460" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </Grid.Background>

                                                    <Grid>
                                                        <Grid.Background>
                                                            <ImageBrush x:Name="imagenFondoUnJuegoOfertas" Stretch="UniformToFill"/>
                                                        </Grid.Background>

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                            <controls:DropShadowPanel Color="Black" ShadowOpacity="1" BlurRadius="10" HorizontalAlignment="Center">
                                                                <controls:ImageEx x:Name="imagenTiendaUnJuegoOfertas" MaxWidth="250" Stretch="Uniform" IsCacheEnabled="True"/>
                                                            </controls:DropShadowPanel>

                                                            <controls:DropShadowPanel x:Name="panelErrorPrecioUnJuegoOfertas" Color="Black" Margin="0,30,0,0" ShadowOpacity="1" BlurRadius="10" HorizontalAlignment="Center" Visibility="Collapsed">
                                                                <Grid Padding="15,10,15,15" Background="IndianRed">
                                                                    <TextBlock x:Name="tbErrorPrecioUnJuegoOfertas" Text="Possible price error" TextWrapping="Wrap" Foreground="White" FontSize="25" FontFamily="Assets/Fuentes/OpenSans-SemiBold.ttf#Open Sans"/>
                                                                </Grid>
                                                            </controls:DropShadowPanel>

                                                            <controls:DropShadowPanel x:Name="panelDescuentoCodigoUnJuegoOfertas" Color="Black" Margin="50,50,50,0" ShadowOpacity="1" BlurRadius="10" HorizontalAlignment="Center" Visibility="Collapsed">
                                                                <TextBlock x:Name="tbDescuentoCodigoUnJuegoOfertas" TextWrapping="Wrap" TextAlignment="Center" Foreground="White" FontSize="25" FontFamily="Assets/Fuentes/OpenSans-SemiBold.ttf#Open Sans"/>
                                                            </controls:DropShadowPanel>

                                                            <controls:DropShadowPanel x:Name="panelMensajeUnJuegoOfertas" Color="Black" Margin="50,50,50,0" ShadowOpacity="1" BlurRadius="10" HorizontalAlignment="Center" Visibility="Collapsed">
                                                                <TextBlock x:Name="tbMensajeUnJuegoOfertas" TextWrapping="Wrap" TextAlignment="Center" Foreground="White" FontSize="25" FontFamily="Assets/Fuentes/OpenSans-SemiBold.ttf#Open Sans"/>
                                                            </controls:DropShadowPanel>
                                                        </StackPanel>

                                                        <controls:DropShadowPanel Grid.Column="1" Color="Black" ShadowOpacity="1" BlurRadius="10" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="40">
                                                            <Grid>
                                                                <Grid.Background>
                                                                    <SolidColorBrush Color="#2e4460" Opacity="0.8"/>
                                                                </Grid.Background>

                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="*"/>
                                                                    <RowDefinition Height="Auto"/>
                                                                </Grid.RowDefinitions>

                                                                <controls:ImageEx Grid.Row="0" x:Name="imagenJuegoUnJuegoOfertas" Stretch="Uniform" IsCacheEnabled="True"/>

                                                                <Grid Grid.Row="1">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                    </Grid.ColumnDefinitions>

                                                                    <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0">
                                                                        <controls:ImageEx x:Name="imagenAnalisisUnJuegoOfertas" IsCacheEnabled="True" Stretch="UniformToFill" MaxHeight="32" MaxWidth="32"/>
                                                                        <controls:ImageEx x:Name="imagenDRMUnJuegoOfertas" IsCacheEnabled="True" Stretch="UniformToFill" MaxHeight="32" MaxWidth="32"/>
                                                                    </StackPanel>

